<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.adminomkar.kanadaapp.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberslay"
            android:orientation="horizontal"
            android:background="#FFFFFF"

            android:layout_margin="2dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:id="@+id/noimage"
                android:layout_weight="0"
                android:src="@drawable/number"
                />

            <TextView
                style="@style/bars"
                android:id="@+id/numbers"
                android:text="@string/numbers"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/familymemlay"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_below="@id/numberslay"
            android:layout_margin="2dp"


            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/familyimage"
                android:layout_weight="0"
                android:src="@drawable/family"
                />

            <TextView
               style="@style/bars"
               android:text="@string/family_members"
               android:id="@+id/familymem"

                android:layout_height="81dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cwordslay"
            android:layout_below="@id/familymemlay"
            android:background="#FFFFFF"

            android:layout_margin="2dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="97dp"
                android:id="@+id/commonimages"
                android:layout_weight="0"
                android:src="@drawable/colors"
                />

            <TextView
                style="@style/bars"
                android:text="@string/colors"
                android:id="@+id/cwords"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phraseslay"
            android:background="#FFFFFF"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/cwordslay"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="97dp"
                android:id="@+id/phrasesimage"
                android:layout_weight="0"
                android:src="@drawable/phrases"
                />

            <TextView
                style="@style/bars"
                android:text="@string/phrases"
                android:id="@+id/phrases"

                android:layout_height="match_parent"

        />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>